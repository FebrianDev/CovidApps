<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".screen.oboarding.Onboarding1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

     <ImageView
         android:layout_width="match_parent"
         android:layout_marginHorizontal="24dp"
         android:layout_height="280dp"
         android:background="@drawable/onb1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/hi_welcome_to_the_international_covid_center"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/here_you_can_see_the_covid_19_cases_update_globally"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"/>

    </LinearLayout>

</FrameLayout>